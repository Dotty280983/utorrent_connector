{
    "name": "__MSG_extension_name__"
  , "description": "__MSG_extension_description__"
  , "version": "0.0.3"
  , "author": "Matt Hensman <m@matt.tf>"

  , "icons": {
        "48": "icon_48.png"
      , "96": "icon_96.png"
    }

  , "default_locale": "en"
  , "manifest_version": 2

  , "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

  , "applications": {
        "gecko": {
            "id": "torrent@matt.tf"
          , "strict_min_version": "55.0"
        }
    }

  , "background": {
        "scripts": [
            "lib/utorrent_api.js"
          , "lib/init.bundle.js"
          , "main.js"
        ]
      , "persistent": false
    }

  , "browser_action": {
        "default_popup": "popup/popup.html"
      , "default_icon": "icon_48.png"
      , "browser_style": true
    }

  , "options_ui": {
        "page": "options/options.html"
      , "browser_style": true
    }

  , "permissions": [
        "menus"
      , "storage"
      , "notifications"
      , "<all_urls>"
    ]
}
