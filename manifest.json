{
    "name": "__MSG_extension_name__"
  , "description": "__MSG_extension_description__"
  , "version": "0.0.1"
  , "author": "Matt Hensman <m@matt.tf>"

  , "default_locale": "en"
  , "manifest_version": 2

  , "applications": {
        "gecko": {
            "id": "torrent@matt.tf",
            "strict_min_version": "55.0"
        }
    }

  , "background": {
        "scripts": [
            "main.js"
        ]
      , "persistent": false
    }

  , "options_ui": {
        "page": "options/options.html"
      , "browser_style": true
    }

  , "permissions": [
        "menus"
      , "storage"
      , "notifications"
      , "<all_urls>"
    ]
}
